[tox]
envlist =
    env_list = py{311,310,39}-django{41,40}

[base]
deps =
    pytest
    pytest-django
    
[django]
4.0 =
    Django>=4.0.0,<4.1.0
4.1 =
    Django>=4.1.0,<4.2.0
3.2 =
    Django>=3.2.0,<3.3.0

[testenv]
deps =
    {[base]deps}
    django41: Django>=4.1,<4.2
    django40: Django>=4.0,<4.1

commands = pytest

[testenv:format]
description = install black in a virtual environment and invoke it on the current folder
deps = black==22.3.0
skip_install = true
commands = black .

